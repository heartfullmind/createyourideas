/**
 * JHipster JDL model for Accounting
 */


entity Idea {
    title String required
    logo ImageBlob required
	description TextBlob required
    ideatype Ideatype
    interest Float required
    distribution Float required
	investment Float required
    active Boolean
}

entity Income {
	title String required
	description String required
	date LocalDate required
	value Float required
}

entity Outgoings {
	title String required
	description String required
	date LocalDate required
	value Float required
}

entity ProfitBalance {
    profit Float
    profitToSpend Float
    netProfit Float
    date LocalDate
}

entity Worksheet {
	jobtitle String required
	jobdescription TextBlob required
	date LocalDate required
	costHour Float required
	hours Duration required
	total Float required
}

enum Ideatype {
	LEVEL1, LEVEL2, LEVEL3, LEVEL4, LEVEL5, LEVEL6, LEVEL7, LEVEL8, LEVEL9
}

// defining multiple OneToMany relationships with comments
relationship OneToMany {
    Idea{incomes} to Income
    Idea{outgoings} to Outgoings
    Idea{worksheet} to Worksheet
    Idea{parent} to Idea
    Idea{profitBalance} to ProfitBalance
}

relationship ManyToOne {
	Idea{user} to User
	Worksheet{user} to User
}

// Set pagination options
paginate Idea with pagination
paginate Income, Outgoings, ProfitBalance with infinite-scroll

//dto * with mapstruct

// Set service options to all
service all with serviceImpl


